
<%= form_with model: @product do |form| %>
    <div class="mb-3 row">
      <%= form.label :title, "Наименование" %><br>
      <div class = "col-sm-10">
        <%= form.text_field :title %>
        <% @product.errors.full_messages_for(:title).each do |message| %>
          <div><%= message %></div>
        <% end %>
      </div>  
    </div>
  
    <div class = "mb-3 row">
      <%= form.label :body, "Описание" %><br>
      <div class="col-sm-10">
        <%= form.text_area :body %><br>
        <% @product.errors.full_messages_for(:body).each do |message| %>
          <div><%= message %></div>
        <% end %>
      </div>
      </div>

    <div class = "mb-3 row">
      <%= form.label :quantity, 'Количество:' %>
      <div class = "col-sm-10">
        <%= form.number_field :quantity, min: 0, required: true %>
        <% @product.errors.full_messages_for(:quantity).each do |message| %>
          <div><%= message %></div>
        <% end %>
      </div
    </div>

    <div class="mb-3 row">
      <%= form.label :price, 'Цена:' %>
      <div class="col-sm-10">
        <%= form.number_field :price, step: '0.01', min: 0, required: true %>
        <% @product.errors.full_messages_for(:price).each do |message| %>
          <div><%= message %></div>
      <% end %>
      </div>
    </div>

    <div>
    <%= form.label :img_url, 'Ссылка на изображение:' %>
    <%= form.text_field :img_url %>
    <% @product.errors.full_messages_for(:img_url).each do |message| %>
      <div><%= message %></div>
    <% end %>
    </div>

    <div>
    <strong>Выберите категории:</strong>
    <% Category.all.each do |category| %>
      <label>
        <%= check_box_tag 'product[category_ids][]', category.id, @product.categories.include?(category) %>
        <%= category.name %>
      </label>
    <% end %>
    </div>
  
    <div>
      <%= form.submit %>
    </div>
<% end %>

